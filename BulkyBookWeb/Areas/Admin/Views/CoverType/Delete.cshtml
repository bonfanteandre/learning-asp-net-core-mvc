@model CoverType
@{
    ViewData["Title"] = "Cover type";
}

<form method="post" asp-controller="CoverType" asp-action="DeletePost">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete cover type</h2>
            <hr />
        </div>
        <input asp-for="Id" type="hidden" />
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary">Go back</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}